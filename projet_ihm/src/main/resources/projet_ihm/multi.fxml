<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projet_ihm.MultiplayerController"
      spacing="10"
      styleClass="menuContainer"
      stylesheets="@../style/menuStyle.css"
>
   <children>
      <Label text="Gauntlet" styleClass="mainTitle" />
      <Button styleClass="menuButton" fx:id="local" text="Local" />
      <Button styleClass="menuButton" fx:id="create" text="Create Server" />
      <Button styleClass="menuButton" fx:id="join" text="Join Server" />
      <HBox fx:id="backBar" alignment="CENTER">
        <Button styleClass="menuButton" fx:id="back" text="Back" onAction="#switchToMenu" />
      </HBox>
   </children>
   <padding>
      <Insets top="0" right="0" bottom="0" left="0" />
   </padding>
</VBox>
