<BorderPane fx:controller="projet_ihm.CreditsController"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="menuContainer"
            stylesheets="@../style/menuStyle.css">

   <top>
      <HBox alignment="CENTER">
         <Region HBox.hgrow="ALWAYS"/>
         <Label text="CREDITS" HBox.hgrow="ALWAYS" styleClass="mainTitle" />
         <Region HBox.hgrow="ALWAYS"/>
      </HBox>
   </top>

   <center>
         <HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <TextArea fx:id="textArea" styleClass="text-area, menuText" wrapText="true" editable="false"/>
            <Region HBox.hgrow="ALWAYS"/>
         </HBox>
   </center>

   <bottom>
      <HBox fx:id="bottomBar" alignment="BOTTOM_LEFT">
         <Button styleClass="menuButton" fx:id="back" text="Back" onAction="#switchToMenu" />
      </HBox>
   </bottom>

</BorderPane>
