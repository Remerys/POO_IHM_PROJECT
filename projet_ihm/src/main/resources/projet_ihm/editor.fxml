<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet_ihm.EditorController">
    <children>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Save"/>
                <MenuItem mnemonicParsing="false" text="Load"/>
                <MenuItem fx:id="editorButton" mnemonicParsing="false" text="Return to the menu" onAction="#switchToMenu"/>
            </Menu>
            <Menu text="View">
                <MenuItem mnemonicParsing="false" text="Zoom +" onAction="#zoomIn"/>
                <MenuItem mnemonicParsing="false" text="Zoom -" onAction="#zoomOut"/>
            </Menu>
        </MenuBar>
        <VBox>
            <ScrollPane fx:id="scrollpane" pannable="true" vbarPolicy="AS_NEEDED">
                <content>
                    <GridPane fx:id="gridpane" xmlns:fx="http://javafx.com/fxml"></GridPane>
                    <!-- hgap="1" vgap="1" -->
                </content>
            </ScrollPane>
            <HBox fx:id="icons" style="-fx-padding: 10 0 0 10;" alignment="BOTTOM_CENTER"></HBox>
        </VBox>
    </children>
    <padding>
        <Insets top="0" right="0" bottom="0" left="0" />
    </padding>
</VBox>
