<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<BorderPane fx:controller="projet_ihm.GameController"
            fx:id="root"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="menuContainer"
            stylesheets="@../style/menuStyle.css"
>
    <left>
        <VBox>
            <Label text="Gauntlet" styleClass="mainTitle" />
            <HBox>
                <Label styleClass="menuButton" text="Level 1" />
                <Region HBox.hgrow="ALWAYS"/>
                <Label styleClass="menuButton" text="Best Score 0" />
            </HBox>
            <Button styleClass="menuButton" text="Player 1" />
            <Button styleClass="menuButton" text="Player 2" />
            <Button styleClass="menuButton" text="Player 3" />
            <Button styleClass="menuButton" text="Player 4" />
        </VBox>
    </left>
    <center>
        <GridPane fx:id="gameGrid" xmlns:fx="http://javafx.com/fxml" >
            <!-- Here the game map : generated by controller -->
        </GridPane>
    </center>
</BorderPane>
