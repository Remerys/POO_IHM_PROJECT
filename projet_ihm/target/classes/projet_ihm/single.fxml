<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.*?>

<BorderPane fx:controller="projet_ihm.EmptyController"
            fx:id="root"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="menuContainer"
            stylesheets="@../style/menuStyle.css"
>
   <top>
      <Label text="Gauntlet" styleClass="mainTitle" />
   </top>
   <center>
      <HBox fx:id="characters" alignment="CENTER"></HBox>
   </center>
   <bottom>
      <HBox fx:id="bottomBar" alignment="CENTER">
         <Button styleClass="menuButton" fx:id="back" text="Back" onAction="#switchToMenu" />
         <Region styleClass="menuButton" fx:id="spring" />
         <Button styleClass="menuButton" fx:id="start" text="Start" />
      </HBox>
   </bottom>

</BorderPane>
