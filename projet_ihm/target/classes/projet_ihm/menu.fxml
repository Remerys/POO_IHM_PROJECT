<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projet_ihm.MenuController"
      spacing="10"
      styleClass="menuContainer"
      stylesheets="@../style/menuStyle.css"
>
   <children>
      <Label  styleClass="mainTitle" text="Gauntlet" />
      <Button styleClass="menuButton" fx:id="menuButton" text="Open Editor" onAction="#switchToEditor"/>
      <Button styleClass="menuButton" fx:id="single" text="Single Player" onAction="#switchToSingleplayer" />
      <Button styleClass="menuButton" fx:id="multi" text="Multiplayer" onAction="#switchToMultiplayer" />
      <Button styleClass="menuButton" fx:id="configuration" text="Configuration" onAction="#switchToConfiguration" />
      <Button styleClass="menuButton" fx:id="score" text="Hall Of Fame" onAction="#switchToHallOfFame" />
      <Button styleClass="menuButton" fx:id="credit" text="Credits" />
      <Button styleClass="menuButton" fx:id="quit" text="Quit" />
   </children>
   <padding>
      <Insets top="0" right="0" bottom="0" left="0" />
   </padding>
</VBox>
